<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/201d45f558.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">

</head>

<body>
    <div id="container">
        <h1 class="m-5 header"> <i class="fas fa-tasks "></i> My To-Do List</h1>





        <form action="/create-task" method="POST">
            <div id="description-block" class="description">
                <label for="description" class="label-align">Description</label>
                <input type="text" name="description" id="description" required class="b0px no-outline"
                    placeholder="What do you want to achieve today?">
            </div>

            <div class="two-items">
                <div id="category-div" class="mx-3">
                    <label for="category " class="label-align">Category</label>
                    <select id="category" class=" b0px no-outline bbtm ptr" name="category">
                        <option value="Personal">Personal</option>
                        <option value="Workout">Work Out</option>
                        <option value="Work">Work</option>
                        <option value="Study">Study</option>
                        <option value="Entertainment">Entertainment</option>
                    </select>
                </div>
                <div id="date-div" class="mx-5">
                    <label for="select-date" class="label-align ">Due Date</label>
                    <input type="date" data-provide="datepicker" class=" ptr b0px no-outline bbtm" name="date"
                        id="select-date" placeholder="dd/mm/yyyy" required>
                </div>
            </div>
            <button type='submit' id="btn" class="b0px mt-3">+ Add Task</button>
            



            <div id="task-container">
                <ul>
                    <% for( let i=0; i < task_list.length; i++ ) { %>
                        <li class="item">

                            <div class="details">
                                <p id="description" class="bold-dark ">
                                    <%= task_list[i].description %>

                                </p>
                                <p id="date" >
                                    <%= task_list[i].date %>
                                        Category : <%= task_list[i].category %>
                                </p>

                                <div class="delete-btn">
                                    <a href="/remove-item/?id=<%= task_list[i]._id %>"><i
                                            class="fas fa-trash delete-btn"></i></a>

                                </div>

                            </div>
                        </li>
                        <% } %>
                </ul>
            </div>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
</body>



</html>